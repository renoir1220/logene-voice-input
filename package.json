{
  "name": "logene-voice-input",
  "private": true,
  "version": "0.2.2",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "sidecar:install": "pip install -i https://pypi.tuna.tsinghua.edu.cn/simple -r python/requirements.txt",
    "sidecar:build": "python python/build_sidecar.py"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "koffi": "^2.15.1",
    "marked": "^17.0.3",
    "sql.js": "^1.14.0",
    "uiohook-napi": "^1.5.4"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "electron-vite": "^5.0.0",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vitest": "^4.0.18"
  },
  "build": {
    "appId": "com.logene.voice-input.electron",
    "productName": "朗珈语音输入法",
    "files": [
      "out/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "icon": "build/icons/icon.icns",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extraResources": [
        {
          "from": "dist/sidecar/mac/",
          "to": "sidecar/mac/",
          "filter": [
            "**/*"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico",
      "extraResources": [
        {
          "from": "dist/sidecar/win/",
          "to": "sidecar/win/",
          "filter": [
            "**/*"
          ]
        },
        {
          "from": "resources/",
          "to": ".",
          "filter": ["icon.png"]
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "extraResources": [
        {
          "from": "dist/sidecar/linux/",
          "to": "sidecar/linux/",
          "filter": [
            "**/*"
          ]
        }
      ]
    }
  }
}
