{
  "name": "logene-voice-input",
  "private": true,
  "version": "0.1.0",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "sidecar:install": "pip install -r python/requirements.txt",
    "sidecar:build": "python3 python/build_sidecar.py"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "marked": "^17.0.3",
    "sql.js": "^1.14.0",
    "uiohook-napi": "^1.5.4"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "electron-vite": "^5.0.0",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vitest": "^4.0.18"
  },
  "build": {
    "appId": "com.logene.voice-input.electron",
    "productName": "Logene Voice Input",
    "mac": {
      "target": "dmg",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "extraResources": [
      {
        "from": "dist/sidecar/",
        "to": "sidecar/",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
